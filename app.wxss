/* app.wxss - 玻璃质感全局样式 */

/* 页面基础背景 - 渐变 */
page {
  background: linear-gradient(180deg, #FAFAFA 0%, #F5F5F5 50%, #FFFFFF 100%);
  min-height: 100vh;
}

/* 玻璃质感卡片基础类 */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-radius: 16rpx;
}

/* 玻璃质感按钮基础类 - 黑色 */
.glass-btn-dark {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15),
              0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.glass-btn-dark:active {
  background: rgba(26, 26, 26, 0.9);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 玻璃质感按钮基础类 - 白色/透明 */
.glass-btn-light {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.glass-btn-light:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

/* 玻璃质感输入框 */
.glass-input {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border-radius: 12rpx;
}

.glass-input:focus {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(26, 26, 26, 0.1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03),
              0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

/* 玻璃质感模态框遮罩 */
.glass-modal-mask {
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

/* 玻璃质感模态框内容 */
.glass-modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40rpx) saturate(200%);
  -webkit-backdrop-filter: blur(40rpx) saturate(200%);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12),
              0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 柔和分割线 */
.glass-divider {
  height: 1rpx;
  background: linear-gradient(90deg, 
    rgba(0, 0, 0, 0) 0%, 
    rgba(0, 0, 0, 0.06) 50%, 
    rgba(0, 0, 0, 0) 100%
  );
}

/* 渐变文字（保持原样）*/
.gradient-text {
  background: linear-gradient(135deg, #1A1A1A 0%, #404040 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 微妙光泽效果 */
.glass-shine::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 16rpx 16rpx 0 0;
  pointer-events: none;
}
