/* pages/add-restaurant/add-restaurant.wxss */
.container {
  padding: 32rpx;
  padding-bottom: 160rpx;
  min-height: 100vh;
}

/* ===== 区块 ===== */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
  letter-spacing: 0.5rpx;
}

/* ===== 表单项 ===== */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #525252;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #A3A3A3;
  font-weight: 400;
}

/* 输入框 - 玻璃质感 */
.form-input, .form-textarea {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.form-input {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 40rpx;
}

.form-textarea {
  min-height: 120rpx;
  line-height: 1.6;
}

.form-input:focus, .form-textarea:focus {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(26, 26, 26, 0.1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03),
              0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.form-input::placeholder, .form-textarea::placeholder {
  color: #A3A3A3;
}

/* ===== 菜品表单 ===== */
.dish-form {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.dish-form::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 20rpx 20rpx 0 0;
  pointer-events: none;
}

.dish-number {
  font-size: 26rpx;
  font-weight: 600;
  color: #737373;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* 评分按钮 - 玻璃质感 */
.rating-buttons {
  display: flex;
  gap: 16rpx;
}

.rating-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 24rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.rating-btn:active {
  transform: scale(0.97);
}

.rating-btn.active {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.rating-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.rating-btn.active .rating-btn-text {
  color: #FFFFFF;
}

/* ===== 底部固定区域 ===== */
.bottom-placeholder {
  height: 140rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, 
    rgba(250, 250, 250, 0) 0%, 
    rgba(250, 250, 250, 0.95) 20%,
    rgba(250, 250, 250, 0.98) 100%
  );
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

/* 操作按钮 - 透明玻璃质感 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.action-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}
