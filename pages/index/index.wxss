/* pages/index/index.wxss - 玻璃质感版本 */
.container {
  padding: 48rpx 32rpx;
  padding-bottom: 120rpx;
  min-height: 100vh;
}

/* ===== 操作栏 ===== */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

/* 搜索按钮 - 玻璃质感 */
.search-btn {
  width: 96rpx;
  height: 96rpx;  /* 和主按钮高度一致 */
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.search-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.4) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 16rpx 16rpx 0 0;
}

.search-btn:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  font-size: 40rpx;
  color: #525252;
  z-index: 1;
}

/* 添加餐厅按钮 - 玻璃质感（和搜索按钮一致）*/
.main-btn {
  flex: 1;
  height: 96rpx;  /* 明确指定高度 */
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 16rpx;
  display: flex;  /* 使用flex居中 */
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.main-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.4) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 16rpx 16rpx 0 0;
}

.main-btn:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.main-btn-text {
  font-size: 30rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* ===== 餐厅卡片网格 ===== */
.restaurant-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

/* 餐厅卡片 - 玻璃质感 */
.restaurant-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

/* 玻璃光泽 */
.restaurant-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 20rpx 20rpx 0 0;
  pointer-events: none;
}

.restaurant-card:active {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12),
              0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  background: rgba(255, 255, 255, 0.85);
}

/* 餐厅名称 */
.restaurant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
  line-height: 1.4;
  word-break: break-all;
  z-index: 1;
  position: relative;
}

/* 餐厅地址 */
.restaurant-address {
  font-size: 24rpx;
  color: #737373;
  margin-bottom: 16rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  z-index: 1;
  position: relative;
}

/* 统计信息 - 玻璃质感 */
.restaurant-stats {
  display: flex;
  gap: 12rpx;
  z-index: 1;
  position: relative;
}

.stat-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  border-radius: 12rpx;
  padding: 12rpx 8rpx;
  text-align: center;
  box-shadow: inset 0 1rpx 2rpx rgba(255, 255, 255, 0.5),
              0 2rpx 4rpx rgba(0, 0, 0, 0.02);
}

.stat-label {
  font-size: 20rpx;
  color: #A3A3A3;
  margin-bottom: 4rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: 0.5rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 160rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #A3A3A3;
  line-height: 1.8;
}
