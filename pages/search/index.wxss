/* pages/search/index.wxss */

/* ==================== CSS Variables ==================== */
page {
  --tag-green: #E8F0E8;
  --tag-pink: #F5E8E8;
  --tag-blue: #E8EBF5;
  --tag-wheat: #F5F0E8;
  --tag-yellow: #FFF9E6;
  --tag-text: #3A3A3C;
}

/* ==================== Page Container ==================== */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 40rpx;
}

/* ==================== Search Bar 搜索栏 ==================== */
.search-bar {
  position: sticky;
  top: 0;
  padding: 24rpx 40rpx;
  background-color: var(--bg-color);
  z-index: 100;
  border-bottom: 1rpx solid #F0F0F0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #F2F2F7;
  border-radius: 40rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  background-color: #E8E8ED;
}

.search-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
  line-height: 1;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  background-color: transparent;
  border: none;
  outline: none;
  min-height: auto;
}

.search-placeholder {
  color: var(--text-secondary);
  font-weight: 400;
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.clear-btn.show {
  opacity: 1;
  transform: scale(1);
}

.clear-btn:active {
  transform: scale(0.9);
}

.clear-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 1;
  font-weight: 300;
}

/* ==================== Search Idle 搜索前状态 ==================== */
.search-idle {
  padding: 0 40rpx;
  transition: opacity 0.3s ease, height 0.3s ease;
}

.search-idle.show {
  opacity: 1;
  height: auto;
}

.search-idle.hide {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

/* Section Header */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
}

.clear-history {
  padding: 8rpx 16rpx;
  transition: opacity 0.3s ease;
}

.clear-history:active {
  opacity: 0.6;
}

.clear-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* ==================== History List 搜索历史 ==================== */
.history-section {
  margin-bottom: 32rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #F9F9F9;
  border-radius: 24rpx;
  transition: background-color 0.3s ease;
}

.history-item:active {
  background-color: #F0F0F0;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.history-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  background-color: rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.history-delete:active {
  transform: scale(0.9);
  background-color: rgba(0, 0, 0, 0.1);
}

.delete-icon {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 1;
  font-weight: 300;
}

/* ==================== Tag Cloud 标签云 ==================== */
.tags-section {
  margin-bottom: 32rpx;
}

.tag-cloud {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.hot-tag {
  padding: 16rpx 48rpx;
  border-radius: 48rpx;
  transition: all 0.3s ease;
}

.hot-tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 标签颜色 */
.tag-green {
  background-color: var(--tag-green);
}

.tag-pink {
  background-color: var(--tag-pink);
}

.tag-blue {
  background-color: var(--tag-blue);
}

.tag-wheat {
  background-color: var(--tag-wheat);
}

.tag-yellow {
  background-color: var(--tag-yellow);
}

.tag-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--tag-text);
}

/* ==================== Search Results 搜索结果 ==================== */
.search-results {
  padding: 0 40rpx;
  transition: opacity 0.3s ease;
}

.search-results.show {
  opacity: 1;
}

.search-results.hide {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

.results-header {
  padding: 24rpx 0;
}

.results-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* ==================== Restaurant List 餐厅列表 ==================== */
.restaurant-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.restaurant-card {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.restaurant-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 卡片图片 */
.card-image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background-color: #F2F2F7;
}

.cover-img {
  width: 100%;
  height: 100%;
}

.card-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8rpx);
  border-radius: 999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.badge-star {
  font-size: 20rpx;
  line-height: 1;
}

.badge-rating {
  font-size: 22rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1;
}

/* 卡片信息 */
.card-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-name {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 高亮文字样式 */
.highlight-word {
  font-weight: 700;
  color: #000000;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.meta-separator {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.card-address {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.address-icon {
  font-size: 24rpx;
  line-height: 1.5;
}

.address-text {
  flex: 1;
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ==================== Empty State 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  text-align: center;
  transition: opacity 0.3s ease;
}

.empty-state.show {
  opacity: 1;
}

.empty-state.hide {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* ==================== Searching State 搜索中状态 ==================== */
.searching-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  transition: opacity 0.3s ease;
}

.searching-state.show {
  opacity: 1;
}

.searching-state.hide {
  opacity: 0;
  height: 0;
  overflow: hidden;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #F0F0F0;
  border-top-color: var(--accent-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}