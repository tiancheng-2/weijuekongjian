/* pages/detail/index.wxss */

/* ==================== Page Container ==================== */
.page-container {
  min-height: 100vh;
  background-color: #F9F9F9;
  padding-bottom: 180rpx;
}

/* ==================== Hero Area 顶部沉浸区 ==================== */
.hero-area {
  position: relative;
  width: 100%;
  height: 800rpx;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 渐变遮罩 */
.hero-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  pointer-events: none;
}

/* Hero 内容 */
.hero-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  z-index: 1;
}

.restaurant-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.3;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.restaurant-meta {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 28rpx;
  line-height: 1;
}

.meta-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* ==================== Info Sheet 悬浮信息卡 ==================== */
.info-sheet {
  margin-top: -80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx 0;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.info-item {
  display: flex;
  align-items: center;
  min-height: 88rpx;
  padding: 16rpx 32rpx;
  transition: background-color 0.3s ease;
}

.info-item:active {
  background-color: #F9F9F9;
}

.info-icon {
  width: 48rpx;
  font-size: 32rpx;
  line-height: 1;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.5;
}

.info-arrow {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
  margin-left: 16rpx;
}

/* 标签区 */
.info-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 32rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: #F2F2F7;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

/* ==================== Section Header 菜品区标题 ==================== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 48rpx 40rpx 24rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
  letter-spacing: -0.5rpx;
}

.dish-stats {
  display: flex;
  gap: 12rpx;
}

.stat-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background-color: #F2F2F7;
}

.stat-badge.must-try {
  background-color: rgba(76, 175, 80, 0.1);
}

.stat-badge.avoid {
  background-color: rgba(255, 152, 0, 0.1);
}

.stat-icon {
  font-size: 24rpx;
  line-height: 1;
}

.stat-count {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-main);
}

/* ==================== Menu Grid 菜品瀑布流 ==================== */
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 0 40rpx 40rpx;
}

.dish-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.dish-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 菜品图片 */
.dish-image-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 1:1 比例 */
  background-color: #F2F2F7;
  overflow: hidden;
}

.dish-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 评分标记 */
.dish-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  backdrop-filter: blur(8rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.dish-badge.must-try {
  background-color: rgba(255, 215, 0, 0.9);
}

.dish-badge.avoid {
  background-color: rgba(200, 200, 200, 0.9);
}

.badge-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #000000;
  line-height: 1;
}

/* 菜品信息 */
.dish-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-note {
  font-size: 22rpx;
  color: #8E8E93;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* ==================== Empty State 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* ==================== Bottom Spacer ==================== */
.bottom-spacer {
  height: 40rpx;
}

/* ==================== Action Bar 底部操作栏 ==================== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 次级按钮 */
.action-btn.secondary {
  width: 88rpx;
  background-color: #F2F2F7;
}

.action-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 主按钮 */
.action-btn.primary {
  flex: 1;
  background-color: #000000;
  color: #FFFFFF;
}

/* 强调按钮 */
.action-btn.accent {
  flex: 1;
  background-color: var(--accent-color);
  color: #FFFFFF;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1;
}