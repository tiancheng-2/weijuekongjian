/* pages/map/index.wxss */

/* ==================== Page Container ==================== */
.page-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* ==================== Full Screen Map ==================== */
.full-map {
  width: 100%;
  height: 100%;
}

/* ==================== Map Controls 地图控件 ==================== */
.map-controls {
  position: absolute;
  right: 40rpx;
  bottom: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 10;
}

.control-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: #FFFFFF;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
  background-color: #F9F9F9;
}

.control-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: var(--text-main);
  line-height: 1;
}

/* ==================== Map Stats Card 统计卡片 ==================== */
.map-stats-card {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(12rpx);
  border-radius: var(--radius-lg);
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  z-index: 10;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-number {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1;
  letter-spacing: -1rpx;
}

.stats-label {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

/* ==================== Loading Overlay 加载状态 ==================== */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: opacity 0.3s ease;
}

.loading-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.loading-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #F0F0F0;
  border-top-color: var(--accent-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* ==================== Empty Overlay 空状态 ==================== */
.empty-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: opacity 0.3s ease;
}

.empty-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.empty-overlay.hide {
  opacity: 0;
  pointer-events: none;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.empty-btn {
  padding: 24rpx 64rpx;
  background-color: var(--accent-color);
  color: #FFFFFF;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.empty-btn-text {
  color: #FFFFFF;
}