/* pages/edit-restaurant/edit-restaurant.wxss */
.container {
  padding: 32rpx;
  padding-bottom: 240rpx;  /* 增加底部空间 */
  min-height: 100vh;
}

/* ===== 表单 ===== */
.form {
  margin-bottom: 48rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #525252;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #A3A3A3;
  font-weight: 400;
}

/* 输入框 - 玻璃质感 */
.form-input {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 40rpx;
}

.form-input:focus {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(26, 26, 26, 0.1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03),
              0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.form-input::placeholder {
  color: #A3A3A3;
}

/* ===== 底部固定区域 ===== */
.bottom-placeholder {
  height: 220rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, 
    rgba(250, 250, 250, 0) 0%, 
    rgba(250, 250, 250, 0.95) 20%,
    rgba(250, 250, 250, 0.98) 100%
  );
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

/* 取消和保存按钮 - 透明玻璃质感 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;  /* 和删除按钮的间距 */
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.action-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* 删除按钮 - 透明玻璃质感（和其他按钮一致）*/
.delete-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.delete-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.delete-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.delete-btn-text {
  font-size: 28rpx;
  color: #DC2626;  /* 红色文字表示危险操作 */
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* ===== 删除确认弹窗 ===== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 560rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40rpx) saturate(200%);
  -webkit-backdrop-filter: blur(40rpx) saturate(200%);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  padding: 48rpx 32rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12),
              0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: modalShow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.4) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  pointer-events: none;
}

@keyframes modalShow {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 16rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

.modal-desc {
  font-size: 28rpx;
  color: #737373;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 32rpx;
  z-index: 1;
  position: relative;
}

/* 弹窗按钮 - 透明玻璃质感 */
.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modal-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.modal-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.modal-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* 确认删除按钮文字使用红色 */
.modal-btn-confirm .modal-btn-text {
  color: #DC2626;
}
