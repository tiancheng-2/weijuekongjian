/* pages/dish/dish.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* ===== 非编辑模式 ===== */

/* 菜品顶部信息 */
.dish-header {
  margin-bottom: 32rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.dish-name {
  flex: 1;
  font-size: 44rpx;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: 0.5rpx;
  line-height: 1.3;
  padding-right: 16rpx;
}

.edit-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;  /* 减小字号，更容易居中 */
  line-height: 1;    /* 关键：行高设为1，消除字体默认行高偏移 */
  color: #737373;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.edit-icon:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.92);
}

.dish-tag {
  display: inline-block;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.dish-tag.must-try {
  background: rgba(42, 42, 42, 0.85);
  color: #FFFFFF;
}

.dish-tag.avoid {
  background: rgba(255, 255, 255, 0.6);
  color: #737373;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
}

.dish-restaurant {
  font-size: 26rpx;
  color: #A3A3A3;
  letter-spacing: 0.5rpx;
}

/* 菜品照片 */
.photo-section {
  margin-bottom: 32rpx;
}

.photo-swiper {
  width: 100%;
  height: 480rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
}

/* 菜品笔记 */
.note-section {
  margin-bottom: 48rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #525252;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.note-text {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  line-height: 1.8;
  letter-spacing: 0.5rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.note-empty {
  background: rgba(255, 255, 255, 0.4);
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #A3A3A3;
  text-align: center;
  letter-spacing: 0.5rpx;
}

/* 删除按钮 */
.delete-section {
  margin-top: 64rpx;
}

.delete-btn {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.delete-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.delete-btn-text {
  font-size: 28rpx;
  color: #DC2626;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* ===== 编辑模式 ===== */
.edit-mode {
  padding-bottom: 160rpx;
}

.edit-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 32rpx;
  letter-spacing: 0.5rpx;
}

.edit-form {
  margin-bottom: 32rpx;
}

.edit-item {
  margin-bottom: 24rpx;
}

.edit-label {
  font-size: 28rpx;
  color: #525252;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #A3A3A3;
  font-weight: 400;
}

/* 编辑输入框 - 玻璃质感 + 垂直居中 */
.edit-input, .edit-textarea {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.edit-input {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 40rpx;
}

.edit-textarea {
  min-height: 160rpx;
  line-height: 1.6;
}

.edit-input:focus, .edit-textarea:focus {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(26, 26, 26, 0.1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03),
              0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.edit-input::placeholder, .edit-textarea::placeholder {
  color: #A3A3A3;
}

/* 评分按钮 - 玻璃质感 */
.rating-buttons {
  display: flex;
  gap: 16rpx;
}

.rating-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 24rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.rating-btn:active {
  transform: scale(0.97);
}

.rating-btn.active {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.rating-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.rating-btn.active .rating-btn-text {
  color: #FFFFFF;
}

/* 编辑按钮区域 */
.bottom-placeholder {
  height: 140rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, 
    rgba(250, 250, 250, 0) 0%, 
    rgba(250, 250, 250, 0.95) 20%,
    rgba(250, 250, 250, 0.98) 100%
  );
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.action-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}
