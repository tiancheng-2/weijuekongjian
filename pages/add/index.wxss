/* pages/add/index.wxss */

/* ==================== Page Container ==================== */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 40rpx var(--page-padding);
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* ==================== Restaurant Name Section ==================== */
.restaurant-name-section {
  margin-bottom: 64rpx;
}

.restaurant-name-input {
  width: 100%;
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.3;
  border: none;
  outline: none;
  padding: 0;
  background-color: transparent;
}

.restaurant-name-input:focus {
  outline: none;
}

.name-placeholder {
  color: #E5E5EA;
  font-weight: 700;
}

/* ==================== Tags Section ==================== */
.tags-section {
  margin-bottom: 64rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 24rpx;
}

.tags-scroll {
  width: 100%;
  white-space: nowrap;
}

.tags-container {
  display: inline-flex;
  gap: 16rpx;
  padding-bottom: 8rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  background-color: #F2F2F7;
  border-radius: 999rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.tag-item:active {
  transform: scale(0.95);
}

.tag-selected {
  background-color: #000000;
}

.tag-text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-main);
  white-space: nowrap;
}

.tag-selected .tag-text {
  color: #FFFFFF;
}

/* ==================== Dishes Section ==================== */
.dishes-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
}

.dishes-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

/* ==================== Dish Card ==================== */
.dish-card {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx;
  background-color: var(--bg-color);
  border: 2rpx solid #E5E5EA;
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.dish-card:active {
  background-color: #FAFAFA;
}

/* 图片占位符 */
.dish-image-placeholder {
  width: 160rpx;
  height: 160rpx;
  background-color: #F2F2F7;
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.camera-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

/* 菜品信息 */
.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  min-width: 0;
}

.dish-name-input {
  width: 100%;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.4;
  border: none;
  outline: none;
  padding: 0;
  background-color: transparent;
}

.dish-name-input:focus {
  outline: none;
}

.dish-placeholder {
  color: #C7C7CC;
  font-weight: 500;
}

/* 菜品操作区 */
.dish-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.recommend-toggle {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.recommend-label {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

.recommend-switch {
  transform: scale(0.8);
}

.delete-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background-color: #F2F2F7;
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
  background-color: #FFE5E5;
}

.delete-icon {
  font-size: 32rpx;
}

/* ==================== Add Dish Button ==================== */
.add-dish-btn {
  width: 100%;
  height: 176rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #E5E5EA;
  border-radius: var(--radius-md);
  background-color: var(--bg-color);
  transition: all 0.3s ease;
}

.add-dish-btn:active {
  background-color: #FAFAFA;
  border-color: #D1D1D6;
}

.add-dish-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

/* ==================== Bottom Spacer ==================== */
.bottom-spacer {
  height: 40rpx;
}

/* ==================== Save Button ==================== */
.save-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx var(--page-padding);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(to top, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.95) 50%, rgba(255, 255, 255, 0) 100%);
  z-index: 100;
}

.save-button {
  width: 100%;
  height: 88rpx;
  background-color: #000000;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.save-button::after {
  border: none;
}

.save-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.save-button-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 0.5rpx;
}

/* ==================== Input Focus States ==================== */
input {
  -webkit-tap-highlight-color: transparent;
}

input:focus {
  outline: none;
}

/* 移除 switch 组件的默认样式 */
switch {
  margin: 0;
  padding: 0;
}