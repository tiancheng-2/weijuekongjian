/* pages/restaurant/restaurant.wxss - 玻璃质感版本 */
.container {
  padding: 32rpx;
  padding-bottom: 140rpx;
  min-height: 100vh;
}

/* ===== 餐厅顶部信息区 - 玻璃卡片 ===== */
.restaurant-header {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  overflow: hidden;
}

.restaurant-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 20rpx 20rpx 0 0;
  pointer-events: none;
}

.restaurant-info {
  flex: 1;
  z-index: 1;
}

.restaurant-name {
  font-size: 44rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #1A1A1A 0%, #404040 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  line-height: 1.3;
}

.restaurant-address {
  font-size: 28rpx;
  color: #737373;
  line-height: 1.6;
}

.edit-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;  /* 减小字号，更容易居中 */
  line-height: 1;    /* 关键：行高设为1，消除字体默认行高偏移 */
  color: #737373;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  z-index: 1;
  flex-shrink: 0;
}

.edit-icon:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.92);
}

/* ===== 筛选标签 - 玻璃质感 ===== */
.filter-tabs {
  display: flex;
  gap: 12rpx;
  padding: 0;
  margin-bottom: 24rpx;
}

.filter-tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  border-radius: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.filter-tab:active {
  transform: scale(0.97);
}

.filter-tab.active {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.filter-tab-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.filter-tab.active .filter-tab-text {
  color: #FFFFFF;
}

/* ===== 菜品展示 - 玻璃卡片 ===== */
.dishes-all-view {
  display: flex;
  gap: 20rpx;
  padding: 0;
}

.dishes-column {
  flex: 1;
}

.column-title {
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #1A1A1A 0%, #404040 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
  text-align: center;
}

.column-empty {
  font-size: 26rpx;
  color: #A3A3A3;
  text-align: center;
  padding: 40rpx 0;
}

.dish-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dish-grid-full {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 0;
}

/* 菜品卡片 - 玻璃质感 */
.dish-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
}

.dish-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.2) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  pointer-events: none;
  z-index: 1;
}

.dish-card:active {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1),
              0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  background: rgba(255, 255, 255, 0.85);
}

.dish-card-image {
  width: 100%;
  height: 200rpx;
  display: block;
}

.dish-card-name {
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
  text-align: center;
  z-index: 2;
  position: relative;
}

.dishes-single-view {
  margin-bottom: 48rpx;
}

.view-empty {
  font-size: 28rpx;
  color: #A3A3A3;
  text-align: center;
  padding: 120rpx 0;
}

.bottom-placeholder {
  height: 120rpx;
}

/* ===== 固定底部按钮容器 ===== */
.fixed-bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, 
    rgba(250, 250, 250, 0) 0%, 
    rgba(250, 250, 250, 0.95) 20%,
    rgba(250, 250, 250, 0.98) 100%
  );
  backdrop-filter: blur(20rpx) saturate(180%);
  -webkit-backdrop-filter: blur(20rpx) saturate(180%);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
}

/* 固定底部按钮本体 - 透明玻璃质感 */
.fixed-btn {
  width: 320rpx;
  background: rgba(255, 255, 255, 0.5);  /* 透明 */
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);  /* 黑色边框 */
  border-radius: 16rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);  /* 柔和阴影 */
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.fixed-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 16rpx 16rpx 0 0;
}

.fixed-btn:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.fixed-btn-text {
  font-size: 30rpx;
  color: #525252;  /* 灰色文字 */
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* ===== 弹窗 - 强化玻璃质感 ===== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40rpx) saturate(200%);
  -webkit-backdrop-filter: blur(40rpx) saturate(200%);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx 24rpx 0 0;
  padding: 48rpx 32rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 48rpx rgba(0, 0, 0, 0.12),
              0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.4) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  pointer-events: none;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
  z-index: 1;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #525252;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #A3A3A3;
  font-weight: 400;
}

/* 输入框 - 玻璃质感 */
.dish-input, .dish-textarea {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15rpx) saturate(160%);
  -webkit-backdrop-filter: blur(15rpx) saturate(160%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.02),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.dish-input {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 40rpx;
}

.dish-textarea {
  min-height: 120rpx;
  line-height: 1.6;
}

.dish-input:focus, .dish-textarea:focus {
  background: rgba(255, 255, 255, 0.8);
  border-color: rgba(26, 26, 26, 0.1);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.03),
              0 4rpx 16rpx rgba(0, 0, 0, 0.06),
              0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.dish-input::placeholder, .dish-textarea::placeholder {
  color: #A3A3A3;
}

/* 评分按钮 - 玻璃质感 */
.rating-buttons {
  display: flex;
  gap: 16rpx;
}

.rating-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 24rpx 0;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.rating-btn:active {
  transform: scale(0.97);
}

.rating-btn.active {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.rating-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.rating-btn.active .rating-btn-text {
  color: #FFFFFF;
}

/* 弹窗操作按钮 */
.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.modal-btn-cancel {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.modal-btn-cancel:active {
  background: rgba(255, 255, 255, 0.7);
  transform: scale(0.98);
}

.modal-btn-cancel .modal-btn-text {
  color: #525252;
}

.modal-btn-save {
  background: rgba(42, 42, 42, 0.85);
  backdrop-filter: blur(10rpx) saturate(150%);
  -webkit-backdrop-filter: blur(10rpx) saturate(150%);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.modal-btn-save::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, 
    rgba(255, 255, 255, 0.08) 0%, 
    rgba(255, 255, 255, 0) 100%
  );
  border-radius: 12rpx 12rpx 0 0;
}

.modal-btn-save:active {
  background: rgba(26, 26, 26, 0.9);
  transform: scale(0.98);
}

.modal-btn-save .modal-btn-text {
  color: #FFFFFF;
}

.modal-btn-text {
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  z-index: 1;
  position: relative;
}
