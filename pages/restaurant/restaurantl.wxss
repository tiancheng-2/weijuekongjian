/* pages/restaurant/restaurant.wxss */
.container {
  padding: 32rpx;
  padding-bottom: 140rpx; /* 为固定按钮留出空间 */
}

/* ===== 餐厅顶部信息区 ===== */
.restaurant-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.restaurant-info {
  flex: 1;
}

.restaurant-name {
  font-size: 44rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #1A1A1A 0%, #404040 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  line-height: 1.3;
}

.restaurant-address {
  font-size: 28rpx;
  color: #737373;
  line-height: 1.6;
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #A3A3A3;
  margin-top: 8rpx;
  transition: all 0.2s ease;
}

.edit-icon:active {
  color: #737373;
  transform: scale(0.95);
}

/* ===== 筛选标签 ===== */
.filter-tabs {
  display: flex;
  gap: 16rpx;
  padding: 0;
  margin-bottom: 24rpx;
}

.filter-tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background: transparent;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.filter-tab:active {
  transform: scale(0.98);
}

.filter-tab.active {
  background: linear-gradient(135deg, #2A2A2A 0%, #1A1A1A 100%);
  border-color: #1A1A1A;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.filter-tab-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.filter-tab.active .filter-tab-text {
  color: #FFFFFF;
}

/* ===== 菜品展示样式 ===== */

/* 全部视图：左右两列 */
.dishes-all-view {
  display: flex;
  gap: 24rpx;
  padding: 0;
}

.dishes-column {
  flex: 1;
}

.column-title {
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #1A1A1A 0%, #404040 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 20rpx;
  text-align: center;
}

.column-empty {
  font-size: 26rpx;
  color: #A3A3A3;
  text-align: center;
  padding: 40rpx 0;
}

.dish-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dish-grid-full {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 0;
}

.dish-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.dish-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
}

.dish-card-image {
  width: 100%;
  height: 200rpx;
  display: block;
}

.dish-card-name {
  padding: 20rpx 16rpx;
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
  text-align: center;
  background: linear-gradient(180deg, #FFFFFF 0%, #FAFAFA 100%);
}

.dishes-single-view {
  margin-bottom: 48rpx;
}

.view-empty {
  font-size: 28rpx;
  color: #A3A3A3;
  text-align: center;
  padding: 120rpx 0;
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* ===== 固定底部按钮 ===== */
.fixed-bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #2A2A2A 0%, #1A1A1A 100%);
  padding: 28rpx 32rpx;
  text-align: center;
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.fixed-bottom-btn:active {
  background: linear-gradient(135deg, #1A1A1A 0%, #0A0A0A 100%);
}

.fixed-btn-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* ===== 弹窗样式 ===== */

/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  backdrop-filter: blur(4rpx);
}

/* 弹窗内容（从底部滑入）*/
.modal-content {
  width: 100%;
  background: linear-gradient(180deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 24rpx 24rpx 0 0;
  padding: 48rpx 32rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗标题 */
.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 32rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #525252;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.char-count {
  font-size: 24rpx;
  color: #A3A3A3;
  font-weight: 400;
}

/* 输入框 */
.dish-input {
  background: #FFFFFF;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  line-height: 1.2;
}

.dish-input:focus {
  border-color: rgba(0, 0, 0, 0.15);
  box-shadow: 0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.dish-input::placeholder {
  color: #A3A3A3;
}

/* 多行文本框 */
.dish-textarea {
  background: #FFFFFF;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  min-height: 120rpx;
  line-height: 1.6;
  transition: all 0.2s ease;
}

.dish-textarea:focus {
  border-color: rgba(0, 0, 0, 0.15);
  box-shadow: 0 0 0 4rpx rgba(0, 0, 0, 0.02);
}

.dish-textarea::placeholder {
  color: #A3A3A3;
}

/* 评分按钮 */
.rating-buttons {
  display: flex;
  gap: 24rpx;
}

.rating-btn {
  flex: 1;
  background: transparent;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 24rpx 0;
  text-align: center;
  transition: all 0.3s ease;
}

.rating-btn:active {
  transform: scale(0.98);
}

.rating-btn.active {
  background: linear-gradient(135deg, #2A2A2A 0%, #1A1A1A 100%);
  border-color: #1A1A1A;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.rating-btn-text {
  font-size: 28rpx;
  color: #525252;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.rating-btn.active .rating-btn-text {
  color: #FFFFFF;
}

/* 弹窗操作按钮 */
.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 12rpx;
  padding: 28rpx 0;
  text-align: center;
  transition: all 0.3s ease;
}

.modal-btn:active {
  transform: scale(0.98);
}

/* 取消按钮 */
.modal-btn-cancel {
  background: transparent;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-btn-cancel .modal-btn-text {
  color: #525252;
}

/* 保存按钮 */
.modal-btn-save {
  background: linear-gradient(135deg, #2A2A2A 0%, #1A1A1A 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.modal-btn-save:active {
  background: linear-gradient(135deg, #1A1A1A 0%, #0A0A0A 100%);
}

.modal-btn-save .modal-btn-text {
  color: #FFFFFF;
}

.modal-btn-text {
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}
